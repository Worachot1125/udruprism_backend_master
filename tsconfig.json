// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
      ],
      "@/icons": ["src/icons"],
      "@/drizzle/*": ["./src/drizzle/*"],
      "@/lib/*": ["./src/lib/*"]

    }
    // "paths": {
    //   "@/*": ["./src/*"]
    // }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src", 
    "src/types",
    "next-env.d.ts", 
    "src/**/*", 
    "src/types/**/*",
    "src/types",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": ["node"],
  "typeRoots": ["./node_modules/@types", "./src/types", "next-env.d.ts", "**/*.ts", "**/*.tsx", "src/types/**/*.d.ts"]
}